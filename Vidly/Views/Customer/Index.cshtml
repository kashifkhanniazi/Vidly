@using Vidly.Models.DbModels
@model List<Customer>
@if (Model.Count == 0)
{
    <text>No one has rent this movie before</text>
}
else
{
    <table class="table table-bordered table-hover">
        <tr>
            <th scope="col">
                Customers
            </th>
            <th scope="col">
                MemberShip Type
            </th>
        </tr>
        <tbody>
            @foreach(var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(customer.Name,"Edit","Customer",new {id = customer.Id}, null)</td>
                    <td>@customer.MembershipType.Name</td>
                </tr>
            }
        </tbody>
    </table>
}