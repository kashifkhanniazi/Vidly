@using Vidly.Models.DbModels
@model List<Customer>
@if (Model.Count == 0)
{
    <text>No one has rent this movie before</text>
}
else
{
    <table id="customer" class="table table-bordered table-hover">
        <tr>
            <th scope="col">
                Customers
            </th>
            <th scope="col">
                MemberShip Type
            </th>
            <th scope="col">
                Delete
            </th>
        </tr>
        <tbody>
            @foreach(var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(customer.Name,"Edit","Customer",new {id = customer.Id}, null)</td>
                    <td>@customer.MembershipType.Name</td>
                    <td>
                        <button class="btn-link js-button">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@section Scripts{
    <script>
        $(document).ready(function (){
            $("#customer .js-delete").on("click", function(){
                confirm("Are you sure to delete this customer");
            })
        });
    </script>
}